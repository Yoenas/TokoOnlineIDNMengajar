<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/purple_500"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.infinityandroid.roundedimageview.RoundedImageView
            android:id="@+id/img_cart"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img_no_image"
            app:corner_radius="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_category_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Makanan"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_cart"
            app:layout_constraintTop_toTopOf="@id/img_cart" />

        <TextView
            android:id="@+id/tv_name_product_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Le Minerale"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_cart"
            app:layout_constraintTop_toBottomOf="@id/tv_category_cart" />

        <TextView
            android:id="@+id/tv_price_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rp 45.000 x4"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/img_cart"
            app:layout_constraintTop_toBottomOf="@id/tv_name_product_cart" />

        <TextView
            android:id="@+id/tv_total_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rp 180.000"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_cart"
            app:layout_constraintTop_toBottomOf="@id/tv_price_cart" />

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="2.5dp"
            android:src="@drawable/ic_adapter_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>